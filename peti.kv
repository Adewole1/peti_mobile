<WelcomeScreen>:

    FloatLayout:
        padding: 0, 0, 0, 0
        pos: self.parent.pos

        FitImage:
            source: 'assets/images/welcome.png'
            size_hint: 1, 0.46
            pos_hint: {'center_x': 0.5, 'top': 1}
            # allow_stretch: True
            # keep_ratio: False

        MDLabel:
            id: 'Welcome_1'
            text: 'Need help taking care of your pets while you are away?'
            bold: True
            font_name: 'Proxima'
            font_size: sp(24)
            text_size: self.size
            halign: 'center'
            color: 38/255, 38/255, 38/255, 1
            size_hint: 0.92, None
            pos_hint: {'center_x': 0.5, 'top': 0.5}

        MDLabel:
            id: 'Welcome_2'
            text: "Peti helps you find the perfect petcare giver to make your pet feel well and safe!"
            font_size: sp(16)
            font_name: 'Proxima'
            text_size: self.size
            # height: dp(20)
            halign: 'center'
            color: 38/255, 38/255, 38/255, 1
            size_hint: 0.92, None
            pos_hint: {'center_x': 0.5, 'top': 0.4}

        MDRoundFlatButton:
            text: "[b]Login[/b]"
            background_color: 0, 0, 0, 0
            color: 70/255, 110/255, 195/255, 1
            size_hint: 0.92, 0.07
            pos_hint: {'center_x': 0.5, 'top': 0.25}
