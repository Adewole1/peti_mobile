            pos_hint: {'center_x': 0.5, 'top': 0.16}
            rounded_button: True
            on_release: root.manager.current = 'signup'

<LoginScreen>:

    on_leave:
        email.text = ''
        password.text = ''

    FloatLayout:
        padding: 0, 0, 0, 0
        pos: self.parent.pos
        FitImage:
            id: logo
            source: 'assets/images/peti.png'
            size_hint: None, None
            size: dp(50), dp(50)
            right: self.parent.center_x-dp(1)
            pos_hint: {'top': .94}

        MDLabel:
            text: "peti"
            bold: True
            font_name: 'Proxima'
            font_size: sp(40)
            text_size: self.size
            size_hint: 0.5, None
            height: dp(40)
            halign: 'left'
            color: 70/255, 110/255, 195/255, 1
            #pos_hint: {'center_x': 0.58}
            x: self.parent.center_x+dp(1)
            y: logo.y+dp(6.5)

        MDLabel:
            text: "Login to your account"
            bold: True
            font_name: 'Proxima'
            font_size: sp(24)
            text_size: self.size
            size_hint: 0.92, None
            height: dp(24)
            halign: 'center'
            color: 38/255, 38/255, 38/255, 1
            pos_hint: {'center_x': 0.5, 'top': 0.84}

        MDTextField:
            id: email
            # focus: True
            mode: 'fill'
            hint_text: 'Email address'
            text: ''
            # required: True
            hint_text_color_normal: 38/255, 38/255, 38/255, 0.5
            hint_text_color_focus: 38/255, 38/255, 38/255, 0.5
            helper_text: 'joe@doe.com. Required'
            helper_text_mode: 'on_error'
            font_name: 'Proxima'
            text_color_normal: 38/255, 38/255, 38/255, 1
            multiline: False
            size_hint: 0.92, 0.09
            hint_text_font_size: sp(8)
            font_size: sp(18)
            pos_hint: {'center_x': 0.5, 'top': 0.75}
            icon_left: 'at'
            on_text:
                self.hint_text_color_normal=[70/255, 110/255, 195/255, 1] if self.text != '' else [38/255, 38/255, 38/255, 0.5]
                self.icon_left_color_normal=[70/255, 110/255, 195/255, 1] if self.text != '' else [38/255, 38/255, 38/255, 0.5]

        MDTextField:
            id: password
            mode: 'fill'
            password: True
            text: ''
            # required: True
            hint_text: 'Password'
            hint_text_color_normal: 38/255, 38/255, 38/255, 0.5
            hint_text_color_focus: 38/255, 38/255, 38/255, 0.5
            helper_text: 'Required'
            font_name: 'Proxima'
            helper_text_mode: 'on_error'
            text_color_normal: 38/255, 38/255, 38/255, 1
            multiline: False
            size_hint: 0.92, 0.09
            hint_text_font_size: sp(8)
            font_size: sp(18)
            pos_hint: {'center_x': 0.5, 'top': 0.63}
            icon_left: 'key-variant'
            on_text:
                self.hint_text_color_normal=[70/255, 110/255, 195/255, 1] if self.text != '' else [38/255, 38/255, 38/255, 0.5]
                self.icon_left_color_normal=[70/255, 110/255, 195/255, 1] if self.text != '' else [38/255, 38/255, 38/255, 0.5]

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"top": 0.62}
            pos: password.width - self.width + dp(8), dp(0)
            theme_text_color: "Hint"
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                password.password = False if password.password is True else True

        MDFillRoundFlatButton:
            id: login
            text: "[b]Login[/b]"
            font_name: 'Proxima'
            bold: True
            color: 1, 1, 1, 1
            border: 0, 0, 0, 0
            size_hint: 0.92, 0.07
            font_size: sp(18)
            pos_hint: {'center_x': 0.5, 'top': 0.49}
            on_release: root.check()

        MDLabel:
            id: socials
            text: "Or continue with"
            font_name: 'Proxima'
            font_size: sp(16)
            text_size: self.texture_size
            size_hint: 1, None
            height: dp(16)
            halign: 'center'
            color: 38/255, 38/255, 38/255, 1
            pos_hint: {'center_x': 0.5}
            top: login.y-20

        Widget:
            id: left
            pos_hint: {'right': 0.04}
            top: socials.center_y
            size_hint: 1, None
            height: dp(16)
            canvas:
                Color:
                    rgba: 38/255, 38/255, 38/255, 1
                Line:
                    cap: 'square'
                    width: dp(1)
                    points: self.right, self.top, self.right*8, self.top

        Widget:
            pos_hint: {'x': 0.96}
            center_y: left.center_y
            size_hint: 1, None
            height: dp(16)
            canvas:
                Color:
                    rgba: 38/255, 38/255, 38/255, 1
                Line:
                    cap: 'square'
                    width: dp(1)
                    points: self.x, self.top, self.x/1.42, self.top

        MDWidget:
            size: dp(54), dp(40)
            # pos_hint: {'top': 0.3}
            # x: socials.center_x-60
            pos_hint: {'x': 0.33, 'y': 0.28}
            id: widget
            canvas:
                Color:
                    rgba: 195/255, 195/255, 195/255, 1
                Line:
                    width: dp(1)
                    rounded_rectangle: self.x, self.y, dp(54), dp(40), dp(2)
            MDFloatLayout:
                pos: self.parent.pos
                size: dp(54), dp(40)
                Image:
                    source: 'assets/images/google.png'
                    size_hint: None, None
                    size: dp(24), dp(24)
                    allow_stretch: True
                    keep_ratio: False
                    # pos: self.parent.x+15, self.parent.y+8
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDWidget:
            size_hint: dp(54), dp(40)
            pos_hint: {'x': 0.52}
            y: widget.y
            id: widget_2
            canvas:
                Color:
                    rgba: 195/255, 195/255, 195/255, 1
                Line:
                    width: dp(1)
                    rounded_rectangle: self.x, self.y, dp(54), dp(40), dp(2)

            MDFloatLayout:
                pos: self.parent.pos
                size: dp(54), dp(40)

                Image:
                    source: 'assets/images/facebook.png'
                    size_hint: None, None
                    size: dp(24), dp(24)
                    allow_stretch: True
                    keep_ratio: False
                    # pos: widget_2.x+15, widget_2.y+8
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: no
            markup: True
            text: "Don't have an account?  [ref=sign_up][color=#466EC3][b]Sign Up[/b][/color][/ref]"
            font_size: sp(16)
            font_name: 'Proxima'
            halign: 'center'
            color: 38/255, 38/255, 38/255, 1
            size_hint: 1, None
            height: dp(16)
            text_size: self.size
            # center_x: socials.center_x-45
            pos_hint: {'top': 0.2, 'center_x': 0.5}
            on_ref_press: root.signup()


